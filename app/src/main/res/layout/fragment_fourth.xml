<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/label_num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_num"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
        </TextView>

        <TextView
            android:id="@+id/display_num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/label_num1"
            >
        </TextView>


        <TextView
            android:id="@+id/label_num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_num"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_num1"
            android:layout_marginTop="@dimen/btn_margin_left"
            >
        </TextView>

        <TextView
            android:id="@+id/display_num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/display_num1"
            app:layout_constraintStart_toStartOf="@+id/label_num2"
            android:layout_marginTop="@dimen/btn_margin_left"
            >
        </TextView>

        <TextView
            android:id="@+id/label_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/operation"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_num2"
            android:layout_marginTop="@dimen/btn_margin_left"
            >
        </TextView>

        <TextView
            android:id="@+id/display_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/display_num2"
            app:layout_constraintStart_toStartOf="@+id/label_operation"
            android:layout_marginTop="@dimen/btn_margin_left"
            >
        </TextView>

        <TextView
            android:id="@+id/label_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_operation"
            android:layout_marginTop="@dimen/btn_margin_left"
            >
        </TextView>

        <TextView
            android:id="@+id/display_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/display_operation"
            app:layout_constraintStart_toStartOf="@+id/label_result"
            android:layout_marginTop="@dimen/btn_margin_left"
            >
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>




</FrameLayout>